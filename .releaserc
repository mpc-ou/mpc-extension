{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    ["@semantic-release/npm", { "npmPublish": false }],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "pnpm dlx tsx scripts/update-wxt-config.ts ${nextRelease.version} && pnpm dlx tsx scripts/update-info.ts \"${nextRelease.version}\" \"${nextRelease.notes}\" && pnpm zip && pnpm zip:firefox"
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": ".output/mpc-extension-*-chrome.zip",
            "label": "Chrome Web Store"
          },
          {
            "path": ".output/mpc-extension-*-firefox.zip",
            "label": "Mozilla Add-ons"
          },
          {
            "path": ".output/mpc-extension-*-sources.zip",
            "label": "Firefox Source Code (Required)"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "wxt.config.ts", "CHANGELOG.md", "assets/data/info.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]"
      }
    ]
  ]
}
