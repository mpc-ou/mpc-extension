    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint --edit",
    "ultracite:check": "pnpm dlx ultracite check",
